---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';

const products = [
  {
    title: 'SmartGrade',
    description: 'Revolutionary exam assessment system using state-of-the-art OCR technologies and LLM models trained on various academic subjects.',
    image: '/images/smartgrade.jpg',
    features: [
      'Advanced OCR for handwriting recognition',
      'Subject-specific LLM evaluation',
      'Detailed feedback generation',
      'Scalable for multiple institutions',
      'Consistent grading standards'
    ]
  },
  {
    title: 'SmartAspirant',
    description: 'Comprehensive AI system built specifically for UPSC aspirants in India, powered by LLMs trained on extensive UPSC preparation materials.',
    image: '/images/smartaspirant.jpg',
    features: [
      'Interactive chat with specialized LLMs',
      'Model answer generation',
      'Real-time news tracking',
      'Answer evaluation and feedback',
      'Personalized study planning'
    ]
  }
];

// SEO metadata
const title = "AI Products - NeuDayAI | SmartGrade & SmartAspirant";
const description = "Discover NeuDayAI's innovative AI products for education: SmartGrade for exam assessment and SmartAspirant for UPSC preparation, powered by specialized LLMs.";
const keywords = ["AI Products", "SmartGrade", "SmartAspirant", "AI Education Tools", "AI Exam Assessment", "UPSC Preparation", "NeuDayAI Products"];
---

<Layout 
  title={title}
  description={description}
  keywords={keywords}
  image="/images/products-hero.jpg"
>
  <main>
    <!-- Hero Section --> 
    <section 
      class="pt-32 pb-20 relative"
      style="background-image: url('/images/products-hero.jpg'); background-size: cover; background-position: center;"
    >
      <div class="absolute inset-0 bg-black opacity-30"></div>
      <div class="relative z-10"></div>
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 
            class="text-4xl md:text-5xl font-bold text-white mb-6"
            data-aos="fade-up"
          >
            Our AI Products
          </h1>
          <p 
            class="text-xl text-gray-100"
            data-aos="fade-up"
            data-aos-delay="100"
          >
            Transforming education and learning with cutting-edge AI technology
          </p>
        </div>
      </div>
    </section>

    <!-- Products Grid -->
    <section class="py-20" id="ai-products">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-1 max-w-6xl mx-auto">
        <div class="bg-gray-100 p-8 rounded-lg shadow-md text-center" itemscope itemtype="https://schema.org/Product">
          <h2 class="text-2xl md:text-3xl font-bold mb-4" itemprop="name">
            Exciting Innovations in Stealth Mode
          </h2>
          <p class="text-lg text-gray-700 mb-6" itemprop="description">
            We are building two groundbreaking products for the Indian educational sector. Stay tuned for more updates!
          </p>
          <meta itemprop="brand" content="NeuDayAI" />
          <meta itemprop="category" content="AI Education Tools" />
        </div>
          <!--  {products.map((product, index) => (
            <ProductCard {...product} />
          ))}
         -->
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-primary text-white" id="product-cta">
      <div class="container mx-auto px-4">
        <div 
          class="max-w-3xl mx-auto text-center"
          data-aos="fade-up"
        >
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Ready to Transform Your Operations?
          </h2>
          <p class="text-xl mb-8">
            Get in touch to learn more about our products and how they can benefit your organization.
          </p>
          <a 
            href="https://calendly.com/amarjeet-neudayai" 
            target="_blank"
            class="inline-block bg-white text-primary px-8 py-3 rounded-full hover:bg-gray-100 transition-colors"
            aria-label="Schedule a demo of NeuDayAI products"
          >
            Schedule a Demo
          </a>
        </div>
      </div>
    </section>
  </main>

  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "ItemList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "item": {
            "@type": "Product",
            "name": "SmartGrade",
            "description": "Revolutionary exam assessment system using state-of-the-art OCR technologies and LLM models trained on various academic subjects.",
            "image": "https://www.neudayai.com/images/smartgrade.jpg",
            "brand": {
              "@type": "Brand",
              "name": "NeuDayAI"
            },
            "category": "AI Education Tools",
            "offers": {
              "@type": "Offer",
              "availability": "https://schema.org/ComingSoon",
              "price": "Custom pricing based on institution size",
              "priceCurrency": "INR"
            }
          }
        },
        {
          "@type": "ListItem",
          "position": 2,
          "item": {
            "@type": "Product",
            "name": "SmartAspirant",
            "description": "Comprehensive AI system built specifically for UPSC aspirants in India, powered by LLMs trained on extensive UPSC preparation materials.",
            "image": "https://www.neudayai.com/images/smartaspirant.jpg",
            "brand": {
              "@type": "Brand",
              "name": "NeuDayAI" 
            },
            "category": "AI Education Tools",
            "offers": {
              "@type": "Offer",
              "availability": "https://schema.org/ComingSoon",
              "price": "Custom pricing based on subscription plan",
              "priceCurrency": "INR"
            }
          }
        }
      ]
    }
  </script>
</Layout>