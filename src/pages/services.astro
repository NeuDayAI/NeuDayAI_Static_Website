---
import Layout from '../layouts/Layout.astro';
import ServiceCard from '../components/ServiceCard.astro';
import { services } from '../data/services';

// SEO metadata
const title = "AI Services - NeuDayAI | Intelligent Business Solutions";
const description = "Discover NeuDayAI's comprehensive AI services including AI agents, chatbots, workflow automation, document processing, and custom AI development solutions for your business.";
const keywords = ["AI Services", "AI Development", "Chatbot Solutions", "Workflow Automation", "Business AI", "Document Processing", "NeuDayAI Services", "AI Consulting", "Pune", "India"];
---

<Layout 
  title={title}
  description={description}
  keywords={keywords}
  image="/images/services-hero.jpg"
>
  <main>
    <!-- Hero Section -->
    <section 
      class="pt-32 pb-20 relative"
      style="background-image: url('/images/services-hero.jpg'); background-size:cover; background-position: center;"
    >
      <div class="absolute inset-0 bg-black opacity-30"></div>
      <div class="relative z-10"></div>
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center relative">
          <h1 
            class="text-4xl md:text-5xl font-bold text-white mb-6"
            data-aos="fade-up"
          >
            Our Services
          </h1>
          <p 
            class="text-xl text-gray-100"
            data-aos="fade-up"
            data-aos-delay="100"
          >
            Comprehensive AI solutions to transform your business
          </p>
        </div>
      </div>
    </section>

    <!-- Services Grid -->
    <section class="py-20" id="services-grid">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-8 max-w-7xl mx-auto">
          {services.map((service, index) => (
            <ServiceCard 
              title={service.title}
              description={service.description}
              image={service.image}
              learnmore={true}
              delay={index * 100}
            />
          ))}
        </div>
      </div>
    </section>

    <!-- Process Section -->
    <section class="py-20 bg-gray-50" id="our-process">
      <div class="container mx-auto px-4">
        <h2 
          class="text-3xl md:text-4xl font-bold text-center mb-12"
          data-aos="fade-up"
        >
          Our Process
        </h2>
        <div class="grid md:grid-cols-4 gap-8 max-w-6xl mx-auto">
          <div 
            class="text-center"
            data-aos="fade-up"
            data-aos-delay="0"
          >
            <div class="text-4xl mb-4">1️⃣</div>
            <h3 class="text-xl font-semibold mb-2">Discovery</h3>
            <p class="text-gray-600">Understanding your needs and objectives</p>
          </div>
          <div 
            class="text-center"
            data-aos="fade-up"
            data-aos-delay="100"
          >
            <div class="text-4xl mb-4">2️⃣</div>
            <h3 class="text-xl font-semibold mb-2">Strategy</h3>
            <p class="text-gray-600">Developing a tailored solution approach</p>
          </div>
          <div 
            class="text-center"
            data-aos="fade-up"
            data-aos-delay="200"
          >
            <div class="text-4xl mb-4">3️⃣</div>
            <h3 class="text-xl font-semibold mb-2">Implementation</h3>
            <p class="text-gray-600">Executing the solution with precision</p>
          </div>
          <div 
            class="text-center"
            data-aos="fade-up"
            data-aos-delay="300"
          >
            <div class="text-4xl mb-4">4️⃣</div>
            <h3 class="text-xl font-semibold mb-2">Support</h3>
            <p class="text-gray-600">Ongoing maintenance and optimization</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-primary text-white" id="services-cta">
      <div class="container mx-auto px-4">
        <div 
          class="max-w-3xl mx-auto text-center"
          data-aos="fade-up"
        >
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Ready to Get Started?
          </h2>
          <p class="text-xl mb-8">
            Schedule a consultation to discuss how we can help transform your business with AI.
          </p>
          <a 
            href="https://calendly.com/amarjeet-neudayai" 
            target="_blank"
            class="inline-block bg-white text-primary px-8 py-3 rounded-full hover:bg-gray-100 transition-colors"
            aria-label="Book a consultation about our AI services"
          >
            Book Your Consultation
          </a>
        </div>
      </div>
    </section>
  </main>

  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebPage",
      "name": "AI Services - NeuDayAI",
      "description": "Comprehensive AI solutions to transform your business",
      "url": "https://www.neudayai.com/services",
      "breadcrumb": {
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://www.neudayai.com"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "Services",
            "item": "https://www.neudayai.com/services"
          }
        ]
      },
      "mainEntity": {
        "@type": "ItemList",
        "itemListElement": [
          {
            "@type": "Service",
            "position": 1,
            "name": "AI Agents & Automation",
            "url": "https://www.neudayai.com/service/ai-agents-&-automation",
            "description": "Custom AI agents to automate your business processes and workflows, increasing efficiency and reducing costs.",
            "provider": {
              "@type": "Organization",
              "name": "NeuDayAI"
            }
          },
          {
            "@type": "Service",
            "position": 2,
            "name": "Chatbot Creation",
            "url": "https://www.neudayai.com/service/chatbot-creation",
            "description": "Intelligent chatbots for 24/7 customer support, lead generation, and automated customer service.",
            "provider": {
              "@type": "Organization",
              "name": "NeuDayAI"
            }
          },
          {
            "@type": "Service",
            "position": 3,
            "name": "Workflow Automation",
            "url": "https://www.neudayai.com/service/workflow-automation",
            "description": "AI-powered analysis and optimization of your business processes for maximum efficiency.",
            "provider": {
              "@type": "Organization",
              "name": "NeuDayAI"
            }
          },
          {
            "@type": "Service",
            "position": 4,
            "name": "Custom AI Development",
            "url": "https://www.neudayai.com/service/custom-ai-development",
            "description": "Tailored AI solutions designed specifically for your unique business needs and challenges.",
            "provider": {
              "@type": "Organization",
              "name": "NeuDayAI"
            }
          }
        ]
      }
    }
  </script>
</Layout>