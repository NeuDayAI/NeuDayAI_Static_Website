---
import Layout from '../layouts/Layout.astro';
import ServiceCard from '../components/ServiceCard.astro';

const services = [
  {
    title: 'AI Consulting',
    description: 'Strategic guidance on implementing AI solutions tailored to your business needs.',
    image: '/images/ai-consulting.jpg',
    features: [
      'AI Readiness Assessment',
      'Technology Stack Planning',
      'Implementation Roadmap',
      'ROI Analysis'
    ]
  },
  {
    title: 'Custom AI Development',
    description: 'Bespoke AI solutions designed and developed for your specific requirements.',
    image: '/images/ai-development.jpg',
    features: [
      'Machine Learning Models',
      'Natural Language Processing',
      'Computer Vision Solutions',
      'Predictive Analytics'
    ]
  },
  {
    title: 'AI Integration',
    description: 'Seamlessly integrate AI capabilities into your existing systems and workflows.',
    image: '/images/ai-integration.jpg',
    features: [
      'API Development',
      'System Integration',
      'Legacy System Modernization',
      'Cloud Deployment'
    ]
  },
  {
    title: 'AI Training & Support',
    description: 'Comprehensive training and ongoing support for your AI implementations.',
    image: '/images/ai-training.jpg',
    features: [
      'Team Training',
      'Documentation',
      'Maintenance',
      '24/7 Support'
    ]
  }
];
---

<Layout 
  title="Services - NeuDayAI"
  description="Explore NeuDayAI's comprehensive AI services and solutions"
>
  <main class="pt-32">
    <!-- Hero Section -->
    <section class="py-20 relative">
      <div class="absolute inset-0 bg-gradient-to-br from-primary/90 to-secondary/90 mix-blend-multiply"></div>
      <div class="absolute inset-0">
        <img 
          src="/images/services-hero.jpg" 
          alt="AI Services" 
          class="w-full h-full object-cover"
        />
      </div>
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center relative">
          <h1 
            class="text-4xl md:text-5xl font-bold text-white mb-6"
            data-aos="fade-up"
          >
            Our Services
          </h1>
          <p 
            class="text-xl text-gray-100"
            data-aos="fade-up"
            data-aos-delay="100"
          >
            Comprehensive AI solutions to transform your business
          </p>
        </div>
      </div>
    </section>

    <!-- Services Grid -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
          {services.map((service, index) => (
            <ServiceCard 
              title={service.title}
              description={service.description}
              image={service.image}
              learnmore={true}
              delay={index * 100}
            />
          ))}
        </div>
      </div>
    </section>

    <!-- Process Section -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 
          class="text-3xl md:text-4xl font-bold text-center mb-12"
          data-aos="fade-up"
        >
          Our Process
        </h2>
        <div class="grid md:grid-cols-4 gap-8 max-w-6xl mx-auto">
          <div 
            class="text-center"
            data-aos="fade-up"
            data-aos-delay="0"
          >
            <div class="text-4xl mb-4">1️⃣</div>
            <h3 class="text-xl font-semibold mb-2">Discovery</h3>
            <p class="text-gray-600">Understanding your needs and objectives</p>
          </div>
          <div 
            class="text-center"
            data-aos="fade-up"
            data-aos-delay="100"
          >
            <div class="text-4xl mb-4">2️⃣</div>
            <h3 class="text-xl font-semibold mb-2">Strategy</h3>
            <p class="text-gray-600">Developing a tailored solution approach</p>
          </div>
          <div 
            class="text-center"
            data-aos="fade-up"
            data-aos-delay="200"
          >
            <div class="text-4xl mb-4">3️⃣</div>
            <h3 class="text-xl font-semibold mb-2">Implementation</h3>
            <p class="text-gray-600">Executing the solution with precision</p>
          </div>
          <div 
            class="text-center"
            data-aos="fade-up"
            data-aos-delay="300"
          >
            <div class="text-4xl mb-4">4️⃣</div>
            <h3 class="text-xl font-semibold mb-2">Support</h3>
            <p class="text-gray-600">Ongoing maintenance and optimization</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-primary text-white">
      <div class="container mx-auto px-4">
        <div 
          class="max-w-3xl mx-auto text-center"
          data-aos="fade-up"
        >
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Ready to Get Started?
          </h2>
          <p class="text-xl mb-8">
            Schedule a consultation to discuss how we can help transform your business with AI.
          </p>
          <a 
            href="https://calendly.com/amarjeet-neudayai" 
            target="_blank"
            class="inline-block bg-white text-primary px-8 py-3 rounded-full hover:bg-gray-100 transition-colors"
          >
            Book Your Consultation
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>